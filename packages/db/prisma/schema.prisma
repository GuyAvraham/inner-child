generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_DATABASE_URL")
}

model Picture {
    id String @id @default(uuid())

    age    AgeMode
    userId String
    key    String
}

model Conversation {
    id        String  @id @default(uuid())
    targetAge AgeMode @unique

    messages Message[]
}

model Message {
    id Int @id @default(autoincrement())

    content        String
    role           SenderRole
    conversationId String
    Conversation   Conversation? @relation(fields: [conversationId], references: [id])
}

enum SenderRole {
    ASSISTANT
    USER
}

enum AgeMode {
    YOUNG
    CURRENT
    OLD
}
